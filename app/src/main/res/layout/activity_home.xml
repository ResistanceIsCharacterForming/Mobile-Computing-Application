<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFE4B5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#8C1717">

        <!-- Notifications Button -->
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose_scaffold"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#8C1717" />
    </RelativeLayout>

    <!-- Section 1: Notifications -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout
            android:id="@+id/notificationList"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <!-- Section 2: Quick match -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/matchedUsersContainer"
        android:padding="16dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnChatNow"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Quick Search"
            android:textSize="20sp"
            android:backgroundTint="#8C1717"
            android:textColor="#FFFFFF"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Customize Search"
            android:backgroundTint="#8C1717"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_margin="8dp" />
    </LinearLayout>

    <!-- Section 3: Filters -->
    <LinearLayout
        android:id="@+id/filterPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#FFF"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Parameters:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <ScrollView
            android:id="@+id/parameterScroll"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite books" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wishlist books" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nearby users" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group search" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
