<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#8C1717">

            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/compose_scaffold"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#8C1717" />
        </RelativeLayout>

        <TextView
            android:text="My Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/imageSlot1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Picture" />

        <TextView
            android:text="About Me"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/aboutMeInput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Write a brief personal description..."
            android:background="#FFF"
            android:padding="8dp"
            android:gravity="top"
            android:layout_marginBottom="16dp"
            android:enabled="false" />

        <TextView
            android:text="Location"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your location"
            android:background="#FFF"
            android:padding="8dp"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="Age"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your age"
            android:inputType="number"
            android:background="#FFF"
            android:padding="8dp"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="Interests"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/interestsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your interests (comma separated)"
            android:background="#FFF"
            android:padding="8dp"
            android:enabled="false"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnEditProfile"
            android:text="Edit Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#8C1717"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />


        <Button
            android:id="@+id/btnLogout"
            android:text="Log Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#8C1717"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
